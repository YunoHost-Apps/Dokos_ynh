#!/bin/bash

# Keep this path for calling _common.sh inside the execution's context of backup and restore scripts
source ../settings/scripts/_common.sh
source /usr/share/yunohost/helpers

ynh_print_info "Declaring files to be backed up..."

ynh_backup "$install_dir"

ynh_backup "$data_dir"

#=================================================
# BACKUP THE NGINX CONFIGURATION
#=================================================
ynh_backup "/etc/nginx/conf.d/$domain.d/$app.conf"

#=================================================
# SPECIFIC BACKUP
#=================================================
# BACKUP LOGROTATE
#=================================================
ynh_print_info "Backing up logrotate..."

ynh_backup "/etc/logrotate.d/$app"

#=================================================
# BACKUP SYSTEMD CONFIGURATION
#=================================================
ynh_print_info "Backing up the systemd services conf files..."

ynh_backup "/etc/systemd/system/$app-redis.target"
ynh_backup "/etc/systemd/system/$app-web.target"
ynh_backup "/etc/systemd/system/$app-workers.target"
ynh_backup "/etc/systemd/system/$app.target"
ynh_backup "/etc/systemd/system/$app-redis-cache.service"
ynh_backup "/etc/systemd/system/$app-redis-queue.service"
ynh_backup "/etc/systemd/system/$app-frappe-default-worker.service"
ynh_backup "/etc/systemd/system/$app-frappe-long-worker.service"
ynh_backup "/etc/systemd/system/$app-frappe-short-worker.service"
ynh_backup "/etc/systemd/system/$app-frappe-schedule.service"
ynh_backup "/etc/systemd/system/$app-frappe-web.service"
ynh_backup "/etc/systemd/system/$app-node-socketio.service"

#=================================================
# BACKUP THE DATABASE
#=================================================
ynh_print_info "Backing up the mysql database..."

ynh_mysql_dump_db > db.sql

#=================================================
# END OF SCRIPT
#=================================================

ynh_print_info "Backup script completed for $app. (YunoHost will then actually copy those files to the archive)."
