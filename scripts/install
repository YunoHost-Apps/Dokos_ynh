#!/bin/bash

source _common.sh
source /usr/share/yunohost/helpers

#=================================================
# RETRIEVE ARGUMENTS FROM THE MANIFEST
#=================================================
#python_version="$(python3 -V | cut -d' ' -f2 | cut -d. -f1-2)"

#=================================================
# INSTALL DEPENDENCIES
#=================================================
ynh_script_progression "Installing wkhtmltopdf patched qt package..."

# Install wkhtmltopdf patched qt package
install_wkhtmltopdf_patched_qt_package

ynh_script_progression "Installing yarn..."
pushd $install_dir
    corepack enable
    ynh_hide_warnings corepack prepare yarn@latest --activate
    ynh_hide_warnings ynh_exec_as_app yarn install --network-timeout=100000
popd

# Install virtualenv
python3 -m venv $install_dir

#=================================================
# Update MYSQL database to utf8
#=================================================
ynh_script_progression "Updating the MySQL database with utf8..."

ynh_mysql_db_shell \
    <<< "ALTER DATABASE $db_name CHARACTER SET utf8mb4 COLLATE utf8mb4_general_ci;"

#=================================================
# APP "BUILD" (DEPLOYING SOURCES, VENV, COMPILING ETC)
#=================================================
# DOWNLOAD, CHECK AND UNPACK SOURCE
#=================================================
ynh_script_progression "Installing $app CLI and setup $app folder and conf files..."

#mkdir -p $install_dir/dokos-bench-folder/apps # Without this folder, first following bench command display a warning that they don't run in a bench folder but if created now, it creates a python error https://github.com/frappe/frappe/issues/26346#issuecomment-2111085990
mkdir -p $install_dir/dokos-bench-folder/sites
mkdir -p $install_dir/dokos-bench-folder/logs
mkdir -p $install_dir/dokos-bench-folder/config/pids
chown -R $app: "$install_dir"
ynh_exec_as_app $install_dir/bin/python -m pip install --upgrade dokos-cli

pushd $install_dir/dokos-bench-folder
    # Setup Python's virtual environment for your bench. This sets up a env folder under the root of the bench directory.
    ynh_exec_as_app PATH=$install_dir/bin:$PATH bench setup env
    # Generate or over-write sites/common_site_config.json
    ynh_config_add --template="common_site_config.json" --destination="$install_dir/dokos-bench-folder/sites/common_site_config.json"
    # Generates configuration for Redis
    ynh_config_add --template="redis_queue.conf" --destination="$install_dir/dokos-bench-folder/config/redis_queue.conf"
    ynh_config_add --template="redis_cache.conf" --destination="$install_dir/dokos-bench-folder/config/redis_cache.conf"
    # Generate Procfile for bench start
    ynh_exec_as_app PATH=$install_dir/bin:$PATH bench setup procfile
    # Setup node dependencies for socketio server
    ynh_exec_as_app PATH=$install_dir/bin:$PATH bench setup socketio
popd

ynh_script_progression "Installing Dodock (frappe), it can take quite some time..."

install_app_to_bench frappe

ynh_script_progression "Installing $app..."

install_app_to_bench erpnext

ynh_script_progression "Installing $app applications payments..."

install_app_to_bench payments

ynh_script_progression "Installing $app applications hrms..."

install_app_to_bench hrms

ynh_script_progression "Remove unneeded files and directories..."
ynh_safe_rm "$install_dir/.cache"
ynh_safe_rm "$install_dir/dokos-bench-folder/apps/hrms/node_modules"

## WARNING
# Cannot install new site now because it requires redis queue service to run... The block was moved after redis services start

chown -R $app:www-data "$install_dir"

#=================================================
# NGINX CONFIGURATION
#=================================================
ynh_script_progression "Configuring NGINX web server..."

# Create a dedicated NGINX config
ynh_config_add_nginx

#=================================================
# SYSTEMD CONFIGURATION
#=================================================
ynh_script_progression "Adding systemd configurations related to $app..."

### `ynh_systemd_config` is used to configure a systemd script for an app, using the conf/systemd.service template
ynh_config_add --template="frappe-bench-redis.target" --destination="/etc/systemd/system/$app-redis.target"
ynh_config_add --template="frappe-bench-web.target" --destination="/etc/systemd/system/$app-web.target"
ynh_config_add --template="frappe-bench-workers.target" --destination="/etc/systemd/system/$app-workers.target"
ynh_config_add --template="frappe-bench.target" --destination="/etc/systemd/system/$app.target"

# Create a dedicated systemd config
ynh_config_add_systemd --service="$app-redis-cache" --template="frappe-bench-redis-cache.service"
ynh_config_add_systemd --service="$app-redis-queue" --template="frappe-bench-redis-queue.service"
ynh_config_add_systemd --service="$app-frappe-default-worker" --template="frappe-bench-frappe-default-worker.service"
ynh_config_add_systemd --service="$app-frappe-long-worker" --template="frappe-bench-frappe-long-worker.service"
ynh_config_add_systemd --service="$app-frappe-short-worker" --template="frappe-bench-frappe-short-worker.service"
ynh_config_add_systemd --service="$app-frappe-schedule" --template="frappe-bench-frappe-schedule.service"
ynh_config_add_systemd --service="$app-frappe-web" --template="frappe-bench-frappe-web.service"
ynh_config_add_systemd --service="$app-node-socketio" --template="frappe-bench-node-socketio.service"

systemctl daemon-reload

# Enable target systemd files
systemctl enable "$app-redis.target" --quiet
systemctl enable "$app-workers.target" --quiet
systemctl enable "$app-web.target" --quiet
systemctl enable "$app.target" --quiet

#=================================================
# INTEGRATE SERVICES IN YUNOHOST
#=================================================
ynh_script_progression "Integrating services in YunoHost..."

yunohost service add "$app-redis-cache" --description="$app redis cache service"
yunohost service add "$app-redis-queue" --description="$app redis queue service"
yunohost service add "$app-frappe-default-worker" --description="$app default worker service"
yunohost service add "$app-frappe-long-worker" --description="$app long worker service"
yunohost service add "$app-frappe-short-worker" --description="$app short worker service"
yunohost service add "$app-frappe-schedule" --description="$app schedule service"
yunohost service add "$app-frappe-web" --description="$app web service"
yunohost service add "$app-node-socketio" --description="$app node socketio service"

#=================================================
# START SYSTEMD SERVICES
#=================================================
ynh_script_progression "Starting some systemd services..."

ynh_systemctl --service=$app-redis-cache --action="start" --log_path="$install_dir/dokos-bench-folder/logs/redis-cache.log" --wait_until="Ready to accept connections"
ynh_systemctl --service=$app-redis-queue --action="start" --log_path="$install_dir/dokos-bench-folder/logs/redis-queue.log" --wait_until="Ready to accept connections"
systemctl start "$app-redis.target" --quiet

#=================================================
# FINISH INSTALLATION BY INSTALLING DOKOS SITE
#=================================================
ynh_script_progression "Installing $app new site..."

pushd $install_dir/dokos-bench-folder
    # doc about bench new-site https://frappeframework.com/docs/user/en/bench/reference/new-site
    ynh_exec_as_app PATH=$install_dir/bin:$PATH bench new-site $domain --db-name $db_name --db-password $db_pwd --no-setup-db --admin-password $password
    ynh_config_add --template="site_config.json" --destination="$install_dir/dokos-bench-folder/sites/$domain/site_config.json"
popd

#=================================================
# START ADDITIONAL SYSTEMD SERVICES
#=================================================
ynh_script_progression "Starting rest of systemd services..."

ynh_systemctl --service=$app-frappe-default-worker --action="start" --log_path="$install_dir/dokos-bench-folder/logs/default-worker.log" --wait_until="Listening on var-www-$app-dokos-bench-folder:default"
ynh_systemctl --service=$app-frappe-long-worker --action="start" --log_path="$install_dir/dokos-bench-folder/logs/long-worker.log" --wait_until="Listening on var-www-$app-dokos-bench-folder:long"
ynh_systemctl --service=$app-frappe-short-worker --action="start" --log_path="$install_dir/dokos-bench-folder/logs/short-worker.log" --wait_until="Listening on var-www-$app-dokos-bench-folder:short"
ynh_systemctl --service=$app-frappe-schedule --action="start" --log_path="systemd"
systemctl start "$app-workers.target" --quiet

ynh_systemctl --service=$app-frappe-web --action="start" --log_path="systemd"
ynh_systemctl --service=$app-node-socketio --action="start" --log_path="$install_dir/dokos-bench-folder/logs/node-socketio.log" --wait_until="Realtime service listening on"
systemctl start "$app-web.target" --quiet

systemctl start "$app.target" --quiet

#=================================================
# RELOAD NGINX
#=================================================
ynh_script_progression "Reloading NGINX web server..."

ynh_systemctl --service=nginx --action=reload

#=================================================
# SCHEDULER
#=================================================
pushd $install_dir/dokos-bench-folder
    ynh_script_progression "Enabling Scheduler..."

    # Enable and resume the scheduler for the site

    ynh_exec_as_app PATH=$install_dir/bin:$PATH bench --site $domain scheduler enable && \
    ynh_exec_as_app PATH=$install_dir/bin:$PATH bench --site $domain scheduler resume && \

    ynh_script_progression "Adding apps Payments, Dokos and Hrms to your website."

    # Install Frappe applications on your site through the Bench CLI. Applications must be installed on your bench prior to that.
    # In this operation, applications meta, modules and doctypes of the specified site are installed on the specified site.
    ynh_exec_as_app PATH=$install_dir/bin:$PATH bench --site $domain install-app payments
    ynh_exec_as_app PATH=$install_dir/bin:$PATH bench --site $domain install-app dokos
    ynh_exec_as_app PATH=$install_dir/bin:$PATH bench --site $domain install-app hrms

popd

chown -R $app:www-data "$install_dir"

#=================================================
# RELOAD NGINX
#=================================================
ynh_script_progression "Reloading NGINX web server..."

ynh_systemctl --service=nginx --action=reload

#=================================================
# SETUP LOGROTATE
#=================================================
ynh_script_progression "Configuring log rotation..."

ynh_config_add_logrotate "$install_dir/dokos-bench-folder/logs/redis-cache.log"
ynh_config_add_logrotate "$install_dir/dokos-bench-folder/logs/redis-queue.log"
ynh_config_add_logrotate "$install_dir/dokos-bench-folder/logs/default-worker.log"
ynh_config_add_logrotate "$install_dir/dokos-bench-folder/logs/long-worker.log"
ynh_config_add_logrotate "$install_dir/dokos-bench-folder/logs/short-worker.log"
ynh_config_add_logrotate "$install_dir/dokos-bench-folder/logs/schedule.log"
ynh_config_add_logrotate "$install_dir/dokos-bench-folder/logs/web.log"
ynh_config_add_logrotate "$install_dir/dokos-bench-folder/logs/node-socketio.log"

#=================================================
# END OF SCRIPT
#=================================================
ynh_script_progression "Installation of $app completed"
